<h2>Resend unlock instructions</h2>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, class: "form-horizontal"}) do |f| %>
  <%= render :partial => "shared/error_messages", locals: { form: f } %>

  <div class='control-group'>
    <%= f.label :screen_name, class: "control-label" %>
    <div class='controls'>
      <%= f.text_field :screen_name, :autofocus => true %>
    </div>
  </div>

  <div class='control-group'>
    <div class='controls'>
      <%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
