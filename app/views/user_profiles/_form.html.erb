<%= form_for(@user, :url => profile_path, :html => { class: "fill-up" }) do |f| %>
<div class="row-fluid">
  <div class="span6">
    <h3> About</h3>
    <ul class="padded separate-sections">
      <li class="input">
        <%= f.label :photo %>
          <div id="userPhotoDropPane" class='fileDropPane span5 clearfix'>Drop images here</div>
          <ul id='userPhotoGallery' class='clearfix'>
            <% if @user.photo %>
            <li style='float: left;'>
              <div class='thumbnail'>
                <img class='img-loading' data-src='<%= @user.photo.url %><%= filepicker_project_view(100, 100) %>' width='100px' height='100px' src='/assets/ie-spacer.gif'>
              </div>
            </li>
            <% end %>
        </ul>
      </li>
      <%= f.fields_for(:user_profile) do |pf| %>
        <li class='input'>
        <%= pf.label :name %>
        <%= pf.text_field :name, placeholder: "Your name" %>
        </li>
        <li class='input'>
        <%= pf.label :headline %>
        <%= pf.text_field :headline, placeholder: "Software Engineer" %>
        </li>
        <li class='input'>
        <%= pf.label :summary %>
        <%= pf.text_area :summary, rows: 5 %>
        </li>
      <% end %>
    </ul>

    <h3> Verified Contact</h3>
    <div class="padded separate-sections">
      <div class='row-fluid'>
        <div class='span10 offset1'>
          <div class="span3">
            <div class="well relative" style='padding: 8px;'>
              <a href='/verify/github'>
                <span class="triangle-button blue"><i class="icon-plus"></i></span>
                <i class='icon-github-alt'></i> github
              </a>
            </div>
          </div>
          <div class="span3">
            <div class="well relative" style='padding: 8px;'>
              <a href='/verify/twitter'>
                <span class="triangle-button blue"><i class="icon-plus"></i></span>
                <i class='icon-twitter'></i> twitter
              </a>
            </div>
          </div>
          <div class="span3">
            <div class="well relative" style='padding: 8px;'>
              <a href='/verify/facebook'>
                <span class="triangle-button blue"><i class="icon-plus"></i></span>
                <i class='icon-facebook'></i> facebook
              </a>
            </div>
          </div>
          <div class="span3">
            <div class="well relative" style='padding: 8px;'>
              <a href='/verify/linkedin_oauth2'>
                <span class="triangle-button blue"><i class="icon-plus"></i></span>
                <i class='icon-linkedin'></i> linkedin
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class='row-fluid'>
      <% @user.verified_contacts.each do |contact| %>
        <%= render :partial => "verified_contact", :locals => { :contact => contact } %>
      <% end %>
      </div>
      
    </div>

    <h3> Contact</h3>
    <ul class="padded separate-sections">
      <%= f.fields_for(:contacts) do |cf| %>
        <div class='container-fluid box-section'>
          <li class='input'>
            <div class='row-fluid'>
              <div class='span1'>
                <%= cf.label :t, "Type" %>
              </div>
              <div class='span4'>
                <%= cf.text_field :t %>
              </div>
              <div class='span1'>
                <%= cf.label :info %>
              </div>
              <div class='span4'>
                <%= cf.text_field :info %>
              </div>
              <div class='span1'
                <% if cf.object.persisted? %>
                  <%= cf.check_box :_destroy %>
                  <%= cf.label :_destroy, "Delete" %>
                <% end %>
              </div>
            </div>
          </li>
        </div>
      <% end %>
    </ul>

  </div>


  <div class="span6">
    <h3> Skills</h3>
    <ul class="padded separate-sections">
      <% count = 0 %>
      <%= f.fields_for(:skills) do |sf| %>
        <div class='container-fluid box-section'>
          <li class='input'>
            <div class="row-fluid">
              <div class="span2">
                <%= sf.label :name, "Skill " + (count += 1).to_s %>
              </div>
              <div class="span9">
                <%= sf.text_field :name %>
              </div>
              <div class="span1">
                <% if sf.object.persisted? %>
                  <%= sf.check_box :_destroy %>
                  <%= sf.label :_destroy, "Delete" %>
                <% end %>
              </div>
            </div>
            <div class='row-fluid'>
              <div class='span2'>
                <%= sf.label :proficiency, "Proficiency" %>
              </div>
              <div class='span1'>
                <span><%= sf.object.proficiency %></span>%
                <%= sf.text_field :proficiency, style: "display: none;" %>
              </div>
              <div class='span8'>
                <div data-value='<%= sf.object.proficiency %>' class="ranged-slider-ui only-min"></div>
              </div>
            </div>
          </li>
        </div>
      <% end %>
    </ul>
  </div>
</div>
<div class="form-actions">
  <%= f.submit class: "btn btn-blue" %>
  <%= link_to "Cancel", :back, class: "btn btn-default" %>
</div>
  
<% end %>

<script>
  $(function(){
    $(".ranged-slider-ui ").each(function(index, el){
      $(el).slider({
        range: "min",
        min: 0,
        max: 100,
        step: 10,
        value: $(el).attr('data-value'),
        slide: function(event, ui) {
          $(event.target).parent().prev().find("input").val(ui.value);
          $(event.target).parent().prev().find("span").html(ui.value);
        }
      });
    });
    
    $('.verified-contacts-delete-btn').click(function(event){
      event.preventDefault();
      $el = $(event.currentTarget);
      $.ajax({
        url: "/profile/verified_contacts/" + $el.attr('data-id') + ".json",
        type: "delete",
        success: function() {
          $el.parent().parent().remove();
        }
      });
    });

    FilepickerImageUpload.initialize(
      '<%= current_user.screen_name %>',
      $("#userPhotoDropPane"),
      $("#userPhotoGallery"),
      'AdLaitW2LTVWJIJTgtAGRz',
      '<%= @policy %>',
      '<%= @signature %>',
      false,
      function(img) {
        var imgHTML = JST["user/photo_upload"]({
          img: img,
          key: window.filepicker_view_query
        });

        $.post(
          "/user/photo.json",
          {
            user_photo: {
              url: img.url
            }
          },
          function(response) {
            $(imgHTML).find(".upload-image-id").val(response.id);
          }
        );

        return imgHTML;
      }
    );
  });
</script>