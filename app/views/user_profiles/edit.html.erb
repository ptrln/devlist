<% if @new_user %>
  <% content_for :title, "New Profile" %>
<% else %>
  <% content_for :title, "Edit Profile" %>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">Edit Profile</span>
      </div>

      <div class="box-content">
        <%= render :partial => "form" %>
      </div>
    </div>
  </div>
</div>

<% if @new_user %>
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3 id="myModalLabel">Welcome <%= current_user.screen_name %>!</h3>
    </div>
    <div class="modal-body">
      <p>It looks like you don't have a profile yet…</p>
      <p>Why not create one now?</p>
      <br><br>
      <div class='row-fluid'>
        <div class='span5 offset1'>
          <button class="btn btn-blue" data-dismiss="modal" aria-hidden="true">Let's get started!</button>
        </div>
        <div class='span5'>
          <a href='/verify/linkedin_oauth2' class="btn btn-blue" aria-hidden="true">
            Import my profile from LinkedIn
          </a>
        </div>
      </div>
      <br><br>
    </div>
    <div class="modal-footer">
      <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  </div>
  <script>
    $(function(){
      $('#myModal').modal('show');
    });
  </script>
<% end %>