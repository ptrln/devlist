<% content_for :title, "Welcome to DevList" %>

<div class='row-fluid well' style='margin-top: 50px;'>
  <div class='span5'>
    <div class='row-fluid' style='margin-top: 80px;'>
      <h3>DevList helps you connect and share with the devs in your life.</h3>
      <br>
      <%= image_tag "intro_network.png" %>
    </div>
  </div>
  <div class='span5 offset1'>
    <div class='row-fluid' style='margin-top: 50px;'>
      <h1>Sign Up</h1>
      <h5>It's free but might not always be.</h5>
    </div>
    <div style='height: 20px'></div>

    <div class='row-fluid'>
      <%= form_for(User.new, :as => "user", :url => registration_path("user"), :html => { class: "form-horizontal" }) do |f| %>
        <%= render :partial => "shared/error_messages", locals: { form: f } %>
        <div class='control-group'>
          <%= f.label :screen_name, class: "control-label" %>
          <div class='controls'>
            <%= f.text_field :screen_name, :autofocus => true  %>
          </div>
        </div>

        <div class='control-group'>
          <%= f.label :email, class: "control-label" %>
          <div class='controls'>
            <%= f.email_field :email %>
          </div>
        </div>

        <div class='control-group'>
          <%= f.label :password, class: "control-label" %>
          <div class='controls'>
            <%= f.password_field :password %>
          </div>
        </div>

        <div class='control-group'>
          <%= f.label :password_confirmation, class: "control-label" %>
          <div class='controls'>
            <%= f.password_field :password_confirmation %>
          </div>
        </div>

        <div class='control-group'>
          <div class='controls'>
            <%= f.submit "Sign Up", class: "btn btn-green btn-large" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>