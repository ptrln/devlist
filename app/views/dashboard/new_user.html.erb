<% content_for :title, "Welcome to DevList" %>

<div id="indexCarousel" class="carousel slide" data-pause="hover">
  <ol class="carousel-indicators">
    <li data-target="#indexCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#indexCarousel" data-slide-to="1"></li>
    <li data-target="#indexCarousel" data-slide-to="2"></li>
    <li data-target="#indexCarousel" data-slide-to="3"></li>
    <li data-target="#indexCarousel" data-slide-to="4"></li>
    <li data-target="#indexCarousel" data-slide-to="5"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">

      <div class="carousel-caption">
        <h1>Create your one-page website in 5 minutes</h1>
        <br>
        <p>
          Easily create beautiful one-page portfolio websites. Show off yourself, and highlight your skills and your projects.
          <a href='#indexCarousel' class='btn btn-primary' data-target="#indexCarousel" data-slide-to="4">Sign up now</a>
        </p>
      </div>
    </div>
    <div class="item">
      <img src="http://peterl.in/images/intro_bg_ny.jpg" alt="">
      <div class="carousel-caption">
        <h4>Highlight your skills and projects</h4>
        <p>
          List all your skills and procifiency. Show off all your projects.
          <a href='#indexCarousel' class='btn btn-primary' data-target="#indexCarousel" data-slide-to="4">Sign up now</a>
        </p>
      </div>
    </div>
    <div class="item">
      <img src="http://peterl.in/images/intro_bg_ny.jpg" alt="">
      <div class="carousel-caption">
        <h4>Custom CSS</h4>
        <p>
          Fully customizable CSS with beatifully designed free templates.
          <a href='#indexCarousel' class='btn btn-primary' data-target="#indexCarousel" data-slide-to="4">Sign up now</a>
        </p>
      </div>
    </div>
    <div class="item">
      <img src="http://peterl.in/images/intro_bg_ny.jpg" alt="">
      <div class="carousel-caption">
        <h4>Full Statistics</h4>
        <p>
          Find out how many visitors and page views you have.
          <a href='#indexCarousel' class='btn btn-primary' data-target="#indexCarousel" data-slide-to="4">Sign up now</a>
        </p>
      </div>
    </div>
    <div class="item" >
      <div class='well clearfix' style='height: 100%;'>
        <div class='span5 offset1'>
          <div class='row-fluid' style='margin-top: 30%;'>
            <h3>DevList helps you connect and share with the devs in your life.</h3>
            <br>
            <%= image_tag "intro_network.png" %>
          </div>
        </div>
        <div class='span5'>
          <div class='row-fluid' style='margin-top: 20%;'>
            <h1>Sign Up</h1>
            <h5>It's free but might not always be.</h5>
          </div>
          <div style='height: 40px'></div>

          <div class='row-fluid'>
            <%= render :partial => "shared/signup_form" %>
          </div>
        </div>
        <br class='clearfix'>
      </div>
    </div>
    <div class="item">
      <img src='http://myface.rama.io/home/slide1.jpg'>
      <div class="carousel-caption">
        <h4>Better than MyFace</h4>
        <p>
          Don't believe me? <a href='http://myface.rama.io/'>Take a look for yourself.</a>
          <a href='#indexCarousel' class='btn btn-primary' data-target="#indexCarousel" data-slide-to="4">Sign up now</a>
        </p>
      </div>
    </div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#indexCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#indexCarousel" data-slide="next">&rsaquo;</a>
</div>